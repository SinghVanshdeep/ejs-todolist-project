      <form action="/work" method="post">
        <% if (locals.items) { %> 
          <% for (var i = 0; i < locals.itemCount; i++) { %>  
          <div class="list-container2"><input id="check-box" type="checkbox"><p class="added-item mt-3 text-white"><%= locals.items[i] %></p></div>
          <% } %>
        <% } %>
        <div class="list-container"><input class="item-input mx-2" type="text" placeholder="New Item" name="newWorkItem"><input class="add-button" type="submit" value="+" name="addWorkItem"></div>
